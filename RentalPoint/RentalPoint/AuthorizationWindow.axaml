<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
        x:Class="RentalPoint.AuthorizationWindow"
        Title="Авторизация"
        Width="300" Height="200">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Вход в систему" FontSize="16" HorizontalAlignment="Center"/>
        
        <TextBox x:Name="LoginTextBox" Watermark="Логин"/>
        
        <TextBox x:Name="PasswordTextBox" Watermark="Пароль" PasswordChar="*"/>
        
        <Button x:Name="LoginButton" Content="Войти" HorizontalAlignment="Stretch" Click="LoginButton_Click"/>
        
        <TextBlock x:Name="ErrorTextBlock" Foreground="Red" TextWrapping="Wrap"/>
    </StackPanel>
</Window>